<p id="notice"><%= notice %></p>

<h1><center>Posts</<center></h1>

<div class="content-fluid">
  <% @posts.each do |post| %>
    <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= truncate(post.content, :length => 300) %></p>
      <p class="card-text"><small class="text-muted"><%= post.user.email %> : <%= post.created_at %></small></p>
      <%= link_to '<button type="button" class="btn btn-primary">Show</button>'.html_safe, post %>
      <% if post.user == current_user %>
          <td><%= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_post_path(post) %></td>
          <td><%= link_to '<button type="button" class="btn btn-primary">Destroy</button>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </div>
  </div>
  <% end %>

</div>